@model Car

<form asp-action="AddCar" method="post">
    <div class="form-group" hidden>
        <input asp-for="Id" class="form-control" value="@Guid.NewGuid().ToString()" />
    </div>
    <div class="form-group">
        <label asp-for="BrandName"></label>
        <input asp-for="BrandName" class="form-control" />
        <span asp-validation-for="BrandName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ModelName"></label>
        <input asp-for="ModelName" class="form-control" />
        <span asp-validation-for="ModelName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <div class="checkbox">
            <label asp-for="Automatic">
                <input asp-for="Automatic" />
                @Html.DisplayNameFor(m => m.Automatic)
            </label>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="BodyType"></label>
        <input asp-for="BodyType" class="form-control" value="@Model.BodyType" />
        <span asp-validation-for="BodyType" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div>
        <button type="submit" class="btn btn-success">Add car</button>
    </div>
</form>